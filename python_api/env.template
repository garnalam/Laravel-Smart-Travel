# ====================================
# API Server Configuration
# ====================================
# Host to bind the server
# Use 0.0.0.0 to allow external connections
# Use 127.0.0.1 for local only (recommended with Nginx reverse proxy)
API_HOST=0.0.0.0

# Port to run the API server
# Common ports: 8000, 8080, 5000, 3001
# For production with Nginx: use any port > 1024 (e.g., 8000)
# For direct access: choose an available port
API_PORT=8000

# Debug mode (True for development, False for production)
DEBUG=True

# ====================================
# Gemini AI Configuration (REQUIRED)
# ====================================
# Get your API key from: https://makersuite.google.com/app/apikey
# This is REQUIRED for the API to function
GEMINI_API_KEY=your_gemini_api_key_here

# Gemini model to use
# Options: gemini-1.5-flash, gemini-1.5-pro
# Recommended: gemini-1.5-flash (faster, cheaper, stable)
GEMINI_MODEL=gemini-1.5-flash

# ====================================
# Security Configuration
# ====================================
# API Key for authentication (strongly recommended for production)
# Generate a strong random key: openssl rand -hex 32
# Leave empty to disable API key authentication (not recommended)
API_KEY=your_secret_api_key_here

# Allowed origins for CORS (comma-separated)
# Examples:
# - Development: http://localhost:3000,http://localhost:8080
# - Production: https://yourdomain.com,https://www.yourdomain.com
# - Allow all (NOT recommended for production): *
ALLOWED_ORIGINS=*

# ====================================
# Performance Configuration
# ====================================
# Request timeout in seconds
# Increase for complex itinerary generation
REQUEST_TIMEOUT=300

# Maximum number of worker processes
# Recommended: number of CPU cores
MAX_WORKERS=4

# ====================================
# Database Configuration (OPTIONAL - NOT REQUIRED)
# ====================================
# Note: Database is NOT required for this API
# All data is provided by Laravel backend
# These settings are kept for backward compatibility only
DB_HOST=localhost
DB_PORT=3306
DB_NAME=travel_db
DB_USER=root
DB_PASSWORD=

